<idea-plugin>
    <id>me.bors.slack-share</id>
    <name>Slack Share</name>
    <vendor email="bors2908@gmail.com" url="https://github.com/bors2908">Bors2908</vendor>

    <description><![CDATA[
    Simple plugin to share code snippets and files in Slack.<br>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
    <actions>
        <action id="me.bors.slack.share.SlackShareSnippetAction" class="me.bors.slack.share.SlackShareSnippetAction"
                text="Share on Slack" description="Share selected on Slack">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="$SearchWeb"/>
            <add-to-group group-id="ConsoleEditorPopupMenu" anchor="after" relative-to-action="$SearchWeb"/>
        </action>
        <action id="me.bors.slack.share.SlackShareFileAction" class="me.bors.slack.share.SlackShareFileAction"
                text="Share on Slack" description="Share file on Slack">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>